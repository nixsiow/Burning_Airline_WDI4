<%= form_for(@flight) do |f| %>
  <% if @flight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@flight.errors.count, "error") %> prohibited this flight from being saved:</h2>

      <ul>
      <% @flight.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :flight_no %><br>
    <%= f.text_field :flight_no, :class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :origin %><br>
    <%= f.text_field :origin, :class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :destination %><br>
    <%= f.text_field :destination, :class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_field :date, :class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :airplane_id %><br>
    <%= f.select :airplane_id, Airplane.all.map {|airplane| [airplane.name, airplane.id]}, :include_blank => true, :class => 'form-control' %>
  </div>
  <div class="actions">
    <br><%= f.submit "Create flight", :class => 'btn btn-success' %>
  </div>
<% end %>
