<div id="search">
</div>

<div id="main">
</div>


<script id="appView" type="text/x-underscore-template">
  <h1>All Flights</h1>
  <ul id="flights"></ul>

  <!-- form to make a search -->
  <form>
    <h1>Search</h1>
    <input id="origin" class="form-control" placeholder="Origin">
    <input id="destination" class="form-control" placeholder="Destination">
    <button class="btn btn-success">Search</button>
  </form>
  <br>
</script>

<script id="flightListView" type="text/x-underscore-template">
  <a href="#flights/{{ id }}">Flight Reference: {{ flight_no }}, Origin: {{origin}}, Destination: {{destination}}, "Date: " {{date}}, Airplane id:  {{airplane_id}}, flight id: {{id}} </a>
</script>

 <script id="flightView" type="text/x-underscore-template">
  <div class="flight">
    <div class="content">
      <p>{{ flight_no }}</p>
      <p>{{ origin }}</p>
      <p>{{ destination }}</p>
      <p>{{ date }}</p>
      <p>{{ airplane_id }}</p>
    </div>
    <hr>
  </div>
</script>