<h2 class="burning">Sign in</h2><hr>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <div><%= f.label :email, :class => 'burning' %><br />
    <%= f.email_field :email, autofocus: true, :class => 'form-control' %></div>
  </div>

  <div class="form-group">
    <div><%= f.label :password, :class => 'burning' %><br />
    <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %></div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => 'burning' %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => 'btn btn-success' %></div>
<% end %>

<hr><%= render "devise/shared/links" %>
